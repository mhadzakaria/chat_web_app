<div id="message-form" data-firebase='<%= raw({ apiKey: Rails.application.secrets.firebase_apiKey, authDomain: Rails.application.secrets.firebase_authDomain, databaseURL: Rails.application.secrets.firebase_databaseURL, projectId: Rails.application.secrets.firebase_projectId, storageBucket: Rails.application.secrets.firebase_storageBucket, messagingSenderId: Rails.application.secrets.firebase_messagingSenderId }.to_json) %>'>
  <% if true#!@chat_session.status.eql?('closed') %>
    <input id="value-msg"></input>
    <button id="adding">Add</button>
  <% end %>
</div>
<strong>Messages:</strong>
<div id="messages"></div>

<script>
  function firebaseConfig() {
    var config = $('#message-form').data('firebase');
    return config
  }
  firebase.initializeApp(firebaseConfig());
  // signOut();

  var database = firebase.database();
  var refDb = database.ref('chats/job_request-11-10-903461171884c642d5f2/messages/')

  $('#adding').on('click', function() {
    refDb.push({
      id: '<%#= current_user.id %>',
      name: '<%#= current_user.email %>',
      text: $('#value-msg').val(),
      time: "<%#= Time.now.strftime('%D %H:%M:%S') %>",
      read: false
    })
  })

  const updateMessages = data => {
    var {id, name, text, time, read} = data.val()
    if (read) {
      read = '';
    } else {
      read = 'U';
    }

    if (id != ''<%#= current_user.id %>) {
      firebase.database().ref().child('<%#= @chat_session.provider_url %>/'+ data.key).update({read: true})
      read = ''
    }

    name = (name == '<%#= current_user.email %>') ? 'You' : name
    $('#messages').append('<p id="'+ data.key +'""><span>'+name+': </span><span>"'+text+'"</span><span class="read_status">'+ read +'</span></p>')
    $('#value-msg').val('')
  }

  const changeStatus = data => {
    $('#'+ data.key +' .read_status').remove()
  }

  function signIn(email, password){
    firebase.auth().signInWithEmailAndPassword(email, password).catch(function(error) {
      var errorCode = error.code;
      var errorMessage = error.message;
      console.log(errorMessage)
      if (errorCode === "auth/user-not-found") {
        signUp(email, password)
      } else {
        alert(errorMessage)
      }
    });
  };
  function signUp(email, password){
    firebase.auth().createUserWithEmailAndPassword(email, password).catch(function(error) {
      var errorCode = error.code;
      var errorMessage = error.message;
      if (errorCode !== null || errorCode !== undefined) {
        alert(errorMessage)
      }
    })
  };
  function signOut(){
    firebase.auth().signOut()
  };

  refDb.on('child_added', updateMessages)
  refDb.on('child_changed', changeStatus)
  aa = []
  refDb.once('value', function(snapshot) {
    // console.log(snapshot.val())
  })
</script>